/**index.wxss**/
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column
}
.header view{
    text-align: center;
}
.h3{
  font-size: 14px;
  color: #9c9898;
  /* line-height: 30px; */
}
.h1{
  font-size: 18px;
  color: #363434;
  line-height: 60px;
}
.btn{
  display: flex;
  justify-content: space-around;
  padding: 0 70px;
}
.btn button{
  font-size: 12px;
  color: #9c9898;
}
.box{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 10px;
}
.nav{
  width: 100%;
  height: 40px;
  border-top: 1px solid #cccc;
  background: #cccc;
  display: flex;
}
.nav text{
  flex: 1;
  text-align: center;
  line-height: 40px;
  color: rgb(153, 144, 144);
  font-size: 14px;
}
